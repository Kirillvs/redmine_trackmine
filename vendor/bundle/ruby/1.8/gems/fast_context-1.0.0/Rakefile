begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "fast_context"
    gemspec.summary = "This is a gem version of the fast_context plugin"
    gemspec.email = "adam@pohorecki.pl"
    gemspec.homepage = "http://github.com/psyho/fast_context"
